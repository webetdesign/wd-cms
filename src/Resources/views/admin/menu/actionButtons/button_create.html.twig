{% if admin.hasAccess('create') and admin.hasRoute('create') and app.user.hasRole('ROLE_ADMIN_CMS') %}
    {% if admin.subClasses is empty %}
        <li>
            <a class="sonata-action-element" href="{{ admin.generateUrl('create', {id: app.request.get('id')}) }}">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                Ajouter un menu
            </a>
        </li>
    {% else %}
        {% for subclass in admin.subclasses|keys %}
            <li>
                <a class="sonata-action-element" href="{{ admin.generateUrl('create', {'subclass': subclass}) }}">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    Ajouter un menu
                </a>
            </li>
        {% endfor %}
    {% endif %}
{% endif %}
