{% extends base_template %}

{% block title %}
    Copier la page "{{ object ~ ' - ' ~ object.site}}"
{% endblock %}

{% block navbar_title %}
    Copier la page "{{ object ~ ' - ' ~ object.site}}"
{% endblock %}

{%- block actions -%}
{%- endblock -%}

{%- block tab_menu -%}

{%- endblock -%}


{% block form %}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-body">
                            {{ form_start(form) }}
                            <div class="sonata-ba-collapsed-fields">
                                {{ form_label(form.site) }}
                                {{ form_widget(form.site) }}
                            </div>
                            <div class="sonata-ba-form-actions form-actions mt-5">
                                <button type="submit" class="btn btn-success" name="btn_update_and_edit"><i class="fa fa-save" aria-hidden="true"></i> Copier</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
